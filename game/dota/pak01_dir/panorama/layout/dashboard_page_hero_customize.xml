<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_hero_customize.vcss_c" />
	</styles>

	<Panel class="SubpageRoot">
		<Panel id="CustomizeControls" class="TopBottomFlow" >
			<Panel id="CustomizeTitleBox" >
				<Label text="#DOTA_HeroCustomize_Title" />
			</Panel>
			<DOTAPageHeroCustomizeItemList id="ItemList" >
				<!-- filled in dynamically -->
			</DOTAPageHeroCustomizeItemList>
			<Panel id="CustomizeFooterBox" >
				<Panel id="ButtonContainer" >
					<Button id="AcceptButton" onactivate="DOTAAcceptCustomization()">
						<Label class="AcceptButtonLabel" text="#DOTA_Accept" />
						<Label class="AcceptEffigyButtonLabel" text="#DOTA_Effigy_AcceptCustomize" />
					</Button>
					<Button id="CancelButton" onactivate="DOTACancelCustomization()">
						<Label class="CancelButtonLabel" text="#DOTA_Cancel" />
						<Label class="CancelEffigyButtonLabel" text="#DOTA_Effigy_CancelCustomize" />
					</Button>
				</Panel>
			</Panel>
		</Panel>
	</Panel>

</root>

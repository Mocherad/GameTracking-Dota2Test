<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/dota_hud_ti_onstage_overlay.vcss_c" />
	</styles>
	<DOTATIOnstageOverlay hittestchildren="false">

		<Panel class="TeamLogosContainer TopBottomFlow">
			<DOTAScenePanel id="HomeTeamLogo" class="TeamLogoModel" />   <!-- map="scenes/events/ti6/team_4.vmap" -->
			<DOTAScenePanel id="AwayTeamLogo" class="TeamLogoModel" />   <!-- map="scenes/events/ti6/team_36.vmap" -->
		</Panel>

		<Panel id="RightColumn" class="TopBottomFlow">

			<Panel id="PickInfoContainer">
				<Label id="PickLabel" text="{s:pick_phase}" />
				<Label id="PickTimer" text="{s:timer}" />
				<Panel id="BonusContainer">
					<Label class="BonusTitle BonusLabel" text="Reserve" />
					<Label class="BonusTime BonusLabel" text="{s:bonus_timer}" />
				</Panel>
			</Panel>
			

			<Panel class="LeftRightFlow">
				<Panel id="PickArrow" />

				<Panel id="SelectedHeroContainer">
					<DOTAHeroImage id="HeroImage0" heroimagestyle="icon"/>
					<DOTAHeroImage id="HeroImage1" heroimagestyle="icon"/>
					<DOTAHeroImage id="HeroImage2" heroimagestyle="icon"/>
					<DOTAHeroImage id="HeroImage3" heroimagestyle="icon"/>
					<DOTAHeroImage id="HeroImage4" heroimagestyle="icon"/>

					<DOTAHeroImage id="HeroImage5" heroimagestyle="icon"/>
					<DOTAHeroImage id="HeroImage6" heroimagestyle="icon"/>
					<DOTAHeroImage id="HeroImage7" heroimagestyle="icon"/>
					<DOTAHeroImage id="HeroImage8" heroimagestyle="icon"/>
					<DOTAHeroImage id="HeroImage9" heroimagestyle="icon"/>
				</Panel>
			</Panel>

			<Panel id="PickCircles">
				
				<Panel id="PickCircle0" class="PickCircle" />
				<Panel id="PickCircle1" class="PickCircle" />
				<Panel id="PickCircle2" class="PickCircle" />
				<Panel id="PickCircle3" class="PickCircle" />
				<Panel id="PickCircle4" class="PickCircle" />

				<Panel id="PickCircle5" class="PickCircle" />
				<Panel id="PickCircle6" class="PickCircle" />
				<Panel id="PickCircle7" class="PickCircle" />
				<Panel id="PickCircle8" class="PickCircle" />
				<Panel id="PickCircle9" class="PickCircle" />
			</Panel>

		</Panel>	

		<DOTAScenePanel id="WinnerLogo" class="TeamLogoModel" />  <!-- map="scenes/events/ti6/team_36.vmap" -->

	</DOTATIOnstageOverlay>
</root>



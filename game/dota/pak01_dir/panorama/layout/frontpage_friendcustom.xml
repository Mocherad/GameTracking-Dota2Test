<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/frontpage_friendcustom.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_home.vcss_c" />
	</styles>

	<FrontpageFriendCustomGameButton>
		<Panel id="CustomGameImage"/>
		<Image class="DOTATodayCellTopTint" tabindex="auto" src="s2r://panorama/images/tint_png.vtex" />
		<Panel id="CustomGameImageOverlay"/>
		<Panel id="Header">
			<Label class="DOTATodayCellHeader" text="#DOTA_Frontpage_FriendCustom_Title"/>
		</Panel>
		<Panel id="Body">
			<DOTAAvatarImage id="FriendAvatar"/>
			<Panel id="Details">
				<Label id="FriendName" class="DetailNames" text="{g:dota_persona:b:friend_account_id}" html="true"/>
				<Label id="IsPlaying" class="DetailLabels" text="#DOTA_Frontpage_FriendCustom_IsPlaying"/>
				<Label id="CustomGameName" class="DetailNames" text="{g:dota_custom_game_name:custom_game_id}"/>
				<Label id="Duration" class="DetailLabels" text="{s:minutes}:{s:seconds}"/>
			</Panel>
		</Panel>
	</FrontpageFriendCustomGameButton>
</root>

<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/frontpage_proplaying.vcss_c" />
		<include src="s2r://panorama/styles/frontpage_backgroundmap.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_home.vcss_c" />
	</styles>

	<FrontpageProPlayingButton>
		<Image class="DOTATodayCellTopTint" tabindex="auto" src="s2r://panorama/images/tint_png.vtex" />
		<Panel class="CellBackground Blur LeftRightFlow">
			<Panel id="MapPreview">
				<Image id="MapBG"/>
				<Panel id="MapBuildingLayer"/>
				<Panel id="MapHeroLayer"/>
			</Panel>
		</Panel>
		<Panel class="OverlayGradient"/>
		<Panel id="Header">
			<Label class="DOTATodayCellHeader" text="#DOTA_Frontpage_ProPlaying_Title"/>
		</Panel>
		<Panel id="Body">
			<DOTAAvatarImage id="ProAvatar"/>
			<Panel id="Details">
				<Label id="ProName" class="DetailNames" text="{g:dota_persona:pro:account_id}" html="true"/>
				<Label id="Team" class="DetailLabels" text="{s:team_name}"/>
				<Label id="GameInfo" class="DetailNames" text="{s:game_mode}"/>
				<Label id="Time" class="DetailLabels" text="{t:d:duration}"/>
			</Panel>
		</Panel>
	</FrontpageProPlayingButton>
</root>

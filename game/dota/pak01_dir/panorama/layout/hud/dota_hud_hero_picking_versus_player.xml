<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_pregame.vcss_c" />
	</styles>

	<DOTAHudHeroPickingVersusPlayer class="HeroVSContainer">
		<Panel class="MaskContainer">
			<Panel class="ZoomLines ZoomLinesBG"/>
			<DOTAScenePanel id="HeroRender" rotateonhover="false" yawmin="-10" yawmax="10" pitchmin="0" pitchmax="0" />
			<Label class="HeroName" text="{g:dota_hero_name:hero_id}" />
			<Panel class="GradientShadow"/>
			<Panel class="PlayerInfoContainer">
				<Label class="PlayerName" text="{s:player_name}" />
				<Panel id="BattlePassInfo">
					<DOTAEventCrestImage id="EventCrestImage" />
					<Label class="BattlePassLevel" text="#DOTA_BattlePassLevel" />
				</Panel>
			</Panel>
		</Panel>
		<DOTAAvatarImage id="AvatarImage" />
	</DOTAHudHeroPickingVersusPlayer>

</root>



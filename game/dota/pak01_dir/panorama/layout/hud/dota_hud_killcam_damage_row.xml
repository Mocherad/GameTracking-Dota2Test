<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_killcam_damage_row.vcss_c" />
	</styles>
	<DOTAKillCamDamageRow>
		<Panel id="HeroImageContainer">
			<DOTAHeroImage id="HeroDamageImg" heroimagestyle="landscape" scaling="stretch-to-fit-preserve-aspect" usedefaultimage="true"/>
		</Panel>
		<Panel id="SpellDamageContainer">
			<Panel id="BuffContainer1" class="BuffContainer">
				<DOTAAbilityItemIcon id="Buff1" class="BuffIcon" />
				<Label id="Buff1Dmg" class="BuffLabel" hittest="false" />
			</Panel>
			<Panel id="BuffContainer2" class="BuffContainer">
				<DOTAAbilityItemIcon id="Buff2" class="BuffIcon" />
				<Label id="Buff2Dmg" class="BuffLabel" hittest="false" />
			</Panel>
			<Panel id="BuffContainer3" class="BuffContainer">
				<DOTAAbilityItemIcon id="Buff3" class="BuffIcon" />
				<Label id="Buff3Dmg" class="BuffLabel" hittest="false" />
			</Panel>
			<Panel id="BuffContainer4" class="BuffContainer">
				<DOTAAbilityItemIcon id="Buff4" class="BuffIcon" />
				<Label id="Buff4Dmg" class="BuffLabel" hittest="false" />
			</Panel>
			<Panel id="BuffContainer5" class="BuffContainer">
				<DOTAAbilityItemIcon id="Buff5" class="BuffIcon" />
				<Label id="Buff5Dmg" class="BuffLabel" hittest="false" />
			</Panel>
		</Panel>
		<Panel id="TotalDamageColumn">
			<Label id="TotalDamage" text="{s:total_damage}" />		
		</Panel>

	</DOTAKillCamDamageRow>
</root>



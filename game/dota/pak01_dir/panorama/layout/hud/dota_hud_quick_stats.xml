<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_quick_stats.vcss_c" />
	</styles>
	<DOTAQuickStats>
		<Panel id="QuickStatsContainer"> 
			<Panel id="KDARow" >
				<Label class="QuickStatLabel" text="#DOTA_Inventory_KDA" />
				<Label class="QuickStatValue" text="{d:kills} / {d:deaths} / {d:assists}" />
			</Panel>
			<Panel id="LHDRow">
				<Label class="QuickStatLabel" text="#DOTA_Inventory_LHD" />
				<Label class="QuickStatValue" text="{d:last_hits} / {d:denies}" />
			</Panel>
		</Panel>
	</DOTAQuickStats>
</root>



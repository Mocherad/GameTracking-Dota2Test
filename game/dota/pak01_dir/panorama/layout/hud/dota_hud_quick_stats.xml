<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_quick_stats.vcss_c" />
	</styles>
	<DOTAQuickStats>
		<Panel id="QuickStatsContainer" hittestchildren="false" hittest="false"> 
			<Panel id="KDARow" >
				<Panel class="HeaderContainer">
					<Label class="QuickStatLabel QuickStatLabelHeader" text="#DOTA_HUD_QuickStats_KDA" /><Panel class="QuickStatContainerMargin LeftRightFlow"><Label id="KillsValue" class="QuickStatValue" text="{d:kills}"/><Label class="SlashLabel" text="/"/><Label id="DeathsValue" class="QuickStatValue" text="{d:deaths}"/><Label class="SlashLabel" text="/"/><Label id="AssistsValue" class="QuickStatValue" text="{d:assists}"/></Panel>
				</Panel>
			</Panel>
			<Panel id="LHDRow">
				<Panel class="HeaderContainer">			
					<Label class="QuickStatLabel QuickStatLabelHeader" text="#DOTA_HUD_QuickStats_CS" /><Panel class="QuickStatContainerMargin LeftRightFlow"><Label id="KillsValue" class="QuickStatValue" text="{d:last_hits}"/><Label class="SlashLabel" text="/"/><Label id="DeathsValue" class="QuickStatValue" text="{d:denies}"/></Panel>
				</Panel>
			</Panel>
		</Panel>
	</DOTAQuickStats>
</root>


